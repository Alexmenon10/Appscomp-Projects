<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="fleet_multiple_assign_form" model="ir.ui.view">
        <field name="name">fleet.multiple.assign.form</field>
        <field name="model">fleet.multiple.assign</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="approval_ids" widget="many2many_tags"
                               options="{ 'no_create':True, 'no_create_edit':True }"/>
                        <field name="vehicle_category"/>
                        <field name="model_id" options="{ 'no_create':True, 'no_create_edit':True }"/>
                        <field name="vechicle_list" options="{ 'no_create':True, 'no_create_edit':True }"/>
                    </group>
                    <group>
                        <field name="vehicle_driver" options="{ 'no_create':True, 'no_create_edit':True }"/>
                    </group>
                </group>
                <footer>
                    <button string="Shedule The Trip" type="object" name="fleet_multiple_assign_vehicle"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="fleet_multiple_assign_action" model="ir.actions.act_window">
        <field name="name">Fleet Multiple Assign</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">fleet.multiple.assign</field>
        <field name="view_mode">form</field>
    </record>

