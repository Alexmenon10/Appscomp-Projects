<?xml version="1.0" ?>
<odoo>
    <data>
        <record id="excess_time_spend_task_report_wizard_form" model="ir.ui.view">
            <field name="name">excess.time.spend.task.form</field>
            <field name="model">excess.time.spend.task</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Excess Time Spend Task Report">
                    <group attrs="{'invisible':[('report_printed','=',True)]}">
                        <group>
                            <field name="start_date" required="1"/>
<!--                            <field name="vechicle_list" readonly="0" widget="many2many_tags"-->
<!--                                   options="{'no_create_edit': True,'no_open':True}"/>-->
                        </group>
                        <group>
                            <field name="end_date" required="1"/>
<!--                            <field name="driver_name" widget="many2many_tags"-->
<!--                                   options="{'no_create_edit': True,'no_open':True}"/>-->
                        </group>
                        <group>
<!--                            <field name="type_of_vehicle"/>-->
                            <field name="user_id" readonly="1" invisible="1"/>
<!--                            <field name="requested" readonly="1" invisible="1"/>-->
                        </group>
                        <group>
<!--                            <field name="vehicle_category"/>-->
                        </group>
                    </group>
                    <group>
                        <field name="report_printed" invisible="1"/>
                        <group attrs="{'invisible':[('report_printed','=',False)]}">
                            <field name="file_name" invisible="1"/>
                            <field name="summary_file" readonly="1" filename="file_name"/>
                        </group>
                    </group>
                    <footer>
                        <button string='Download' name="action_get_excess_time_spend_task"
                                type="object" class="oe_highlight" icon="fa-download"
                                attrs="{'invisible':[('report_printed','=',True)]}"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_four_wheeler_usage_report">
            <field name="name">Excess Time Spend Task Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">excess.time.spend.task</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="excess_time_spend_task_report_wizard_form"/>
            <field name="target">new</field>
        </record>

        <menuitem action="action_four_wheeler_usage_report" id="menu_action_excess_time_spend_task_report"
                  name="Excess Time Spend Task"
                  parent="project.menu_project_report" sequence="2"/>
    </data>
</odoo>
