<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="wizard_partner_statement_view" model="ir.ui.view">
            <field name="name">wizard.partner.statement.form</field>
            <field name="model">wizard.partner.statement</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Partner Statement Report">
                    <group attrs="{'invisible':[('report_printed','=',True)]}">
                        <field name="partner_id" options="{'no_create': True,'no_open':True}"/>
                    </group>
                    <group attrs="{'invisible':[('report_printed','=',True)]}">
                        <group>
                            <!--                            <field name="company_id" required="1" options="{'no_create': True}" />-->
                            <!--                            <field name="branch_ids" widget="many2many_tags" options="{'no_create': True}"-->
                            <!--                                attrs="{'invisible':[('company_id','=',False)]}"/>-->
                            <field name="report_type" required='1'/>

                        </group>
                        <group>
                            <field name="start_date" required='1'/>
                            <field name="end_date" required='1'/>
                        </group>
                    </group>
                    <group>
                        <field name="report_printed" invisible="1"/>
                        <group attrs="{'invisible':[('report_printed','=',False)]}">
                            <field name="file_name" invisible="1"/>
                            <field name="summary_file" readonly="1" filename="file_name"/>
                        </group>
                    </group>
                    <footer>
                        <button string='Print' name="get_partner_report"
                                type="object" class="btn-primary" attrs="{'invisible':[('report_printed','=',True)]}"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_wizard_partner_statement_view" model="ir.actions.act_window">
            <field name="name">Partner Statement Excel Report</field>
            <field name="res_model">wizard.partner.statement</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem
                name="OutStanding Report"
                id="menu_outstanding_report_excel_wizard"
                parent="account.menu_finance_reports"
                sequence="1500"/>
        <menuitem
                name="Partner Report"
                action="action_wizard_partner_statement_view"
                id="menu_view_get_partner_pdc_report_excel_wizard"
                parent="menu_outstanding_report_excel_wizard"
                sequence="15"/>

<!--        <act_window id="partner_statement_wizard"-->
<!--                    name="Partner Statement Report"-->
<!--                    binding_model="res.partner"-->
<!--                    res_model="wizard.partner.statement"-->
<!--                    view_mode="form" target="new"-->
<!--        />-->

    </data>
</odoo>
