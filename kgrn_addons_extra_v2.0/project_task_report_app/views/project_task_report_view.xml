        <record id="action_wizard_project_report" model="ir.actions.act_window">
            <field name="name">Project Report Excel Report</field>
            <field name="res_model">project.details</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <!-- project task wizard -->
        <record model="ir.ui.view" id="project_details_wizard_view">
            <field name="name">project.details</field>
            <field name="model">project.details</field>
            <field name="arch" type="xml">
                <form string="Project">
                    <group colspan="2" string="Filter Project Report">
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                        <group>
                            <field name="user_id"/>
                            <field name="stage_id"/>
                        </group>
                    </group>
                    <footer>
                        <button name="print_report" string="Print Report"
                                type="object" default_focus="1" class="oe_highlight" icon="fa-print"/>
                        <button string="Cancel" class="btn-default" special="cancel" icon="fa-times"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_wizard_task_report" model="ir.actions.act_window">
            <field name="name">Task Report Excel Report</field>
            <field name="res_model">task.details</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <!-- project task wizard -->
        <record model="ir.ui.view" id="project_task_wizard_view">
            <field name="name">task.details</field>
            <field name="model">task.details</field>
            <field name="arch" type="xml">
                <form string="Task">
                    <group colspan="2" string="Filter Task Report">
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                        <group>
                            <field name="user_id"/>
                        </group>
                    </group>
                    <footer>
                        <button name="print_task_report" string="Print Report"
                                type="object" default_focus="1" class="oe_highlight" icon="fa-print"/>
                        <button string="Cancel" class="btn-default" special="cancel" icon="fa-times"/>
                    </footer>
                </form>
            </field>
        </record>


        <record id="action_wizard_task_pending_report" model="ir.actions.act_window">
            <field name="name">Task Pending Report Excel Report</field>
            <field name="res_model">task.pending.details</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <!-- project task wizard -->
        <record model="ir.ui.view" id="task_pending_details_wizard_view">
            <field name="name">task.pending.details</field>
            <field name="model">task.pending.details</field>
            <field name="arch" type="xml">
                <form string="Project">
                    <group colspan="2" string="Filter Project Report">
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                        <group>
                            <field name="user_id"/>
                        </group>
                    </group>
                    <footer>
                        <button name="print_task_report" string="Print Report"
                                type="object" default_focus="1" class="oe_highlight" icon="fa-print"/>
                        <button string="Cancel" class="btn-default" special="cancel" icon="fa-times"/>
                    </footer>
                </form>
            </field>
        </record>

