<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <report
                id="payslip_management_report"
                model="hr.payslip"
                string="PaySlip"
                report_type="qweb-pdf"
                name="om_hr_payroll.payslip_report_template"
                file="om_hr_payroll.payslip_report_template"
                print_report_name="'Payslip Report - %s' % (object.name)"
                menu="True"

        />
        <template id="payslip_report_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="rec">
                    <t t-call="web.basic_layout">

                        <t t-as="o" t-foreach="docs">


                            <div style="font-size:14px;" class="page">

                                <div class="oe_structure"/>

                                <tr>

                                    <div style="width: 45%;float: top;" class="page" align="left">

                                        <img style="width:30%" src="/web/binary/company_logo"/>

                                    </div>

                                    <div align="left">
                                        <div>
                                            <strong>

                                                <span t-field="o.company_id.name"/>

                                            </strong>

                                            <br/>

                                            <span t-field="o.company_id.partner_id.street"/>

                                            <br/>

                                            <span t-field="o.company_id.partner_id.street2"/>

                                            <br/>

                                            <span t-field="o.company_id.partner_id.city"/>

                                            <span t-field="o.company_id.partner_id.zip"/>

                                            <br/>

                                        </div>
                                        <div>
                                            Ph.no:
                                            <span t-field="o.company_id.partner_id.phone"/>

                                            <br/>
                                            Email:
                                            <span t-field="o.company_id.partner_id.email"/>

                                            <br/>
                                        </div>
                                    </div>


                                </tr>
                                <div class="page" align="center">

                                    <tr>
                                        <h2>Pay Slip</h2>
                                    </tr>
                                    <h4>
                                        <p t-field="o.name"/>
                                    </h4>

                                </div>

                                <br/>

                                <table class="table table-sm table-bordered" style="font-size:14px;">
                                    <tr>
                                        <td>
                                            <strong>Name</strong>
                                        </td>
                                        <td>
                                            <span t-field="o.employee_id"/>
                                        </td>
                                        <td>
                                            <strong>Job Position</strong>
                                        </td>
                                        <td>
                                            <span t-field="o.employee_id.job_id"/>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td>
                                            <strong>Employee ID</strong>
                                        </td>
                                        <td>
                                            <span t-field="o.employee_id.identification_id"/>
                                        </td>
                                        <td>
                                            <strong>Date of Joining</strong>
                                        </td>
                                        <td>
                                            <span t-field="o.employee_id.first_contract_date"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <strong>Reference</strong>
                                        </td>
                                        <td>
                                            <span t-field="o.number"/>
                                        </td>
                                        <td>
                                            <strong>Bank Account</strong>
                                        </td>
                                        <td>
                                            <span t-field="o.employee_id.bank_account_id"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <strong>Period</strong>
                                        </td>
                                        <td>
                                            <span t-field="o.date_from"/>
                                        </td>

                                        <td>
                                            <strong>Number of Days</strong>
                                        </td>

                                        <td>
                                            <t t-set="days" t-value="0.0"/>
                                            <p t-foreach="o.worked_days_line_ids" t-as="worked_days">
                                                <t t-set="days" t-value="days+worked_days.number_of_days"/>
                                            </p>
                                            <t t-esc="days"/>
                                        </td>

                                    </tr>

                                    <tr>

                                    </tr>


                                    <tr>
                                        <td>
                                            <strong>DOB</strong>
                                        </td>
                                        <td>
                                            <span t-field="o.employee_id.birthday"/>
                                        </td>

                                    </tr>

                                </table>

                                <br/>
                                <br/>
                                <br/>


                                <h4 style="text-align:left;font-size:14px;">Earnings</h4>
                                <table class="table table-condensed"
                                       style="border:2px  solid Black!important;font-size:14px;">
                                    <thead>
                                        <tr>
                                            <th style="text-align:left;">
                                                <b>Name</b>
                                            </th>
                                            <th style="text-align:left;">
                                                <b>Code</b>
                                            </th>
                                            <th style="text-align:left;">
                                                <b>Total</b>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody class="sale_t body">
                                        <t t-foreach="o.line_ids" t-as="l">
                                            <t t-if="l.category_id.name != 'Deduction'
                                                 and l.category_id.name != 'Net' and l.category_id.name != 'Gross'">
                                                <tr>
                                                    <td>
                                                        <span t-esc="l.name"/>
                                                    </td>
                                                    <td>
                                                        <span t-esc="l.code"/>
                                                    </td>
                                                    <td>
                                                        <span t-esc="'%.2f'% l.total"/>
                                                    </td>
                                                </tr>
                                            </t>
                                            <t t-if="l.category_id.name == 'Gross'">
                                                <tr style="background-color:gray;">
                                                    <td></td>
                                                    <td>
                                                        <span>Total Earnings</span>
                                                    </td>
                                                    <td class="align:right;">
                                                        <span t-esc="'%.2f'% l.total"/>
                                                    </td>
                                                </tr>
                                            </t>
                                        </t>
                                    </tbody>
                                </table>

                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <br/>

                                <h4 style="text-align:left;font-size:14px;">Deduction</h4>
                                <table class="table table-condensed"
                                       style="border:2px  solid Black!important;font-size:14px;">
                                    <thead>
                                        <tr>
                                            <th style="text-align:left;">
                                                <b>Name</b>
                                            </th>
                                            <th style="text-align:left;">
                                                <b>Code</b>
                                            </th>
                                            <th style="text-align:left;">
                                                <b>Total</b>
                                            </th>

                                        </tr>
                                    </thead>
                                    <tbody class="sale_t body">
                                        <t t-foreach="o.line_ids" t-as="l">
                                            <t t-if="l.category_id.name == 'Deduction'">
                                                <tr>
                                                    <td>
                                                        <span t-esc="l.name"/>
                                                    </td>
                                                    <td>
                                                        <span t-esc="l.code"/>
                                                    </td>

                                                    <td>
                                                        <span t-esc="'%.2f'% l.total"/>
                                                    </td>

                                                </tr>
                                            </t>

                                        </t>
                                        <tr style="background-color:gray;">
                                            <td></td>
                                            <td>
                                                <span>
                                                    <b>Total Deduction</b>

                                                </span>
                                            </td>
                                            <td class="align:right;">
                                                <span t-esc="'%.2f'% o.deduction_amount"/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <br/>
                                <br/>


                                <div style="float:right; width:230px; border: 1px solid #000;">


                                    <!--                                                style="font-size: 20px; height:50px; border-right: 1px solid #000;-->
                                    <!--                                    padding-left: 8px; text-align: left;-->
                                    <!--                                   vertical-align: middle; width: 150px; float:left; margin:0px; line-height:52px;">-->
                                    <b>Net Salary (AED)</b>
                                    <small style="font-size:55%;"></small>


                                    <span
                                            style="line-height:60px; text-align:center; font-size: 20px; padding-left:40px;">
                                        <t t-set="NET" t-value="0.0"/>
                                        <t t-foreach="o.line_ids" t-as="line">
                                            <t t-if="line.code == 'NET'">
                                                <t t-set="NET" t-value="line.total"/>

                                            </t>
                                        </t>
                                        <t t-esc="round(NET)"/>
                                    </span>

                                </div>
                            </div>
                        </t>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>






